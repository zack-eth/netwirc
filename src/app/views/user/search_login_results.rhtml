<% if @results.empty? %>
  '<%=h @phrase %>' not found!
<% else %>
<% unless @phrase.length == 0 || @phrase == " " %>
  '<%=h @phrase %>' found in
  <% for result in @results %>
  	<br><%= highlight(result.name, @phrase) %> | <%= link_to("view profile", { :controller => "user", :action => "profile", :id => result.id }) %>
  <% end %>
<% end %>
<% end %>