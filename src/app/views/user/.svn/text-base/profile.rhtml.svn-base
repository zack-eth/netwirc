<div class="panel">
	<div class="panel_header"><%= render(:partial => 'main/panel_header', :locals => {:title => "Profile", :current => @user.name}) %></div>

<span class="profile_top_links">
<%= link_to("edit", :controller => "user", :action => "edit_profile", :id => @user.id) %> |
<%= link_to("send private message", :controller => "channel", :action => "pm_invite", :user_id => @user.id) %> |
<%= link_to("flag!", :controller => "user", :action => "flag", :id => @user.id) %></span>
<br /><br /><br /><br />
<table style="position: relative; left: 30px;">
<tr>
<td>
<table>
<tr>
	<td class="bold_blue_text">Username:</td><td> <%= @user.name %></td>
</tr>
<tr>
	<td class="bold_blue_text">Real Name:</td><td> <%= @user.first_name %> <span style="color: #777;">(hidden)</span></td>
</tr>
<tr>
	<td class="bold_blue_text">Email:</td><td> <span style="color: #777;">(hidden)</span></td>
</tr>
<tr>
	<td class="bold_blue_text">Age:</td><td> <%= Time.now.year - @user.birthday.year %></td>
</tr>
<tr>
	<td class="bold_blue_text">Zip code:</td><td> <span style="color: #777;">(hidden)</span></td>
</tr>
<tr>
	<td>&nbsp;</td>
</tr>
</table>
</td>
<td width="45px"></td>
<td class="bold_blue_text" style="text-align: top left; float: right; width: 100px;">
	Profile Pic:</td><td>
	<% if @user.picture %>
		<img height=100 src="<%= url_for(:action => :picture, :id => @user.picture.id) %>"/>
	<% end %>
</td>
</tr>	
</table>
<div class="hr_gray_fade_2"><%= image_tag("hr_gray_fade.jpg") %></div>
<br /><br /><br />
<p>
<table>
<tr>
<td>
<span class="bold_blue_text" style="position: absolute; left: 30px; top: 310px;">Currently in the following channels:</span>
<span class="profile_current_channels">
<table width="225px" cellspacing=0 cellopadding=0>
<% for member in @current_channels %>
<tr><td>
	<%= link_to(member.channel.name, :controller => "channel", :action => "visit", :id => member.channel.id)%>
</td></tr>
<% end %>
</table>
</span>
</td>
<td>
	<span class="bold_blue_text" style="position: absolute; left: 330px; top: 310px;">Founder of the following channels:</span>
	<span class="profile_founder_channels">
	<table width="225px" cellspacing=0 cellopadding=0>
	<% for member in @founder_channels %>
	<tr><td>
		<%= link_to(member.channel.name, :controller => "channel", :action => "visit", :id => member.channel.id)%>
	</td></tr>
	<% end %>
	</table>
	</span>
</td>
</tr>
</table>
</p>
</div>