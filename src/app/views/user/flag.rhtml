<div class="panel">
	<div class="panel_header"><%= render(:partial => 'main/panel_header', :locals => {:title => "Flag User", :current => @user.name}) %></div>
	<div id="channel_flag">
	<%= form_tag :id => @receiving_user_id %>
	<p>
		<span class="bold_blue_text">Reason:</span>
	</p>
	<p>
		<%= text_area(:flag, :reason, :cols => "72") %>
	</p>
	<p>
		<%= submit_tag("Flag!") %>
	</p>
	<%= end_form_tag %>
</div>