<div id="channel_menu">
	<table width="100%" text-align="center">
	<tr>
      <td><%= link_to("Channel Settings", {:controller => "main", :action => "select_main_tab", :c => "channel", :a => "settings", :i => @channel.id}, {"onmouseover" => "new Effect.Appear('xtest')", "onmouseout" => "new Effect.Fade('xtest')"}) %></td>

      <td><%= @is_op ?   link_to("Manage Ops", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "manage_ops", :i => @channel.id) : '<span class="disabled_link">Manage Ops</span>' %></td>
	<td><%= @is_op ? link_to("Manage Bans", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "manage_bans", :i => @channel.id) : '<span class="disabled_link">Manage Bans</span>' %></td>
	<td><%= link_to("View Logs", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "logs_by_day", :i => @channel.id) %></td>
	<td><span id="self">
	<% if @is_favorite %>
		<%= render(:partial => 'channel/remove_favorite', :user => @user, :channel => @channel) %>
	<% else %>
		<%= render(:partial => 'channel/add_favorite', :user => @user, :channel => @channel) %>
	<% end %>
	</span></td>
	<td><%= link_to("Flag!", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "flag", :i => @channel.id) %></td>
</div>
