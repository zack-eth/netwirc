<% if @results.empty? %>
  '<%=h @phrase %>' not found!
<% else %>
<% unless @phrase.length == 0 || @phrase == " " %>
  '<%=h @phrase %>' found in
  <% for result in @results %>
  	<br><%= link_to highlight(result.name, @phrase), { :controller => "channel", :action => "visit", :id => result.id} %>
  <% end %>
<% end %>
<% end %>