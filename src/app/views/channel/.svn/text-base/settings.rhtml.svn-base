<div class="panel">
	<div class="panel_header">
		<%= render(:partial => 'main/panel_header', :locals => {:title => "Channel Settings", :current => @channel.name}) %></div>
	<span class="profile_top_links">
	<%= link_to("edit", :controller => "channel", :action => "edit_settings", :id => @channel.id) %>
	</span>
	<br /><br /><br />
	<table style="position: relative; left: 30px;">
	<tr>
	<td>
	<table width="350px">
	<tr>
		<td class="bold_blue_text">Channel Name:</td><td> <%= @channel.name %></td>
	</tr>
	<tr>
		<td class="bold_blue_text">Topic:</td><td> <%= @channel.topic %></td>
	</tr>
	<tr>
		<td class="bold_blue_text">Description:</td><td> <%= @channel.description %></td>
	</tr>
	<tr>
		<td class="bold_blue_text">Category:</td><td> <%= ChannelCategory.find(@channel.channel_category_id).name %></td>
	</tr>
	</table>
	</td>
	<td  class="bold_blue_text" style="text-align: top left; float: right; width: 100px;">
		Channel Logo:</td><td>
		<% if @channel.picture %>
			<img height=100 src="<%= url_for(:action => :picture, :id => @channel.picture.id) %>"/>
		<% end %>
	</td>
	</tr>	
	</table>