<div id="left_nav">
	<% if logged_in? -%>
		<br />
		<p>
			<%= link_to("Create Channel", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "create") %>
			<%= link_to("Find Channel", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "search") %>
			<%= link_to("Browse Channels", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "browse") %>
		</p>
		<p><%= link_to("Find User", :controller => "main", :action => "select_main_tab", :c => "user", :a => "search") %></p>
		<p><%= link_to("My Channels", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "my_channels") %>
			<%= link_to("My Profile", :controller => "main", :action => "select_main_tab", :c => "user", :a => "profile", :i => session[:user_id]) %>
			My Settings<br />
		</p>
	<% else -%>
		<% if @controller.action_name == "login" -%>
		<br><br><br>
			<%= link_to("Log in", :controller => "main", :action => "select_main_tab", :c => "user", :a => "login") %>
			<%= link_to("Register", :controller => "main", :action => "select_main_tab", :c => "user", :a => "registration") %>
		<% else -%>
			<%= render(:partial => 'user/mini_login') %>
		<% end -%>
		<p>
			<%= link_to("Find Channel", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "search") %>
			<%= link_to("Browse Channels", :controller => "main", :action => "select_main_tab", :c => "channel", :a => "browse") %>
		</p>
		<p><%= link_to("Find User", :controller => "main", :action => "select_main_tab", :c => "user", :a => "search") %></p>
	<% end -%>
</div>